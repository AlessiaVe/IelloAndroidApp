<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/btnEspandi"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:padding="16dp"
        android:drawableEnd="@drawable/ic_keyboard_arrow_up_black_24px"
        android:drawableRight="@drawable/ic_keyboard_arrow_up_black_24px"
        android:text="@string/tutti_i_risultati"
        android:textAlignment="viewStart" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightGrey"
        android:contentDescription="@string/divider" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Il parcheggio piÃ¹ vicino"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="16dp"/>

    <include layout="@layout/listitem_parcheggio"/>


    <com.github.aakira.expandablelayout.ExpandableRelativeLayout
        android:id="@+id/expRecParcheggi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:ael_expanded="false"
        app:ael_duration="500"
        android:background="@color/clearBackground"
        app:ael_interpolator="accelerate"
        app:ael_orientation="vertical">


        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/recParcheggi"/>

    </com.github.aakira.expandablelayout.ExpandableRelativeLayout>

</LinearLayout>